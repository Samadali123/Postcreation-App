<!doctype html>
<html lang="en">

<head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <title>Profile</title>
    <link href="https://cdn.jsdelivr.net/npm/remixicon@3.5.0/fonts/remixicon.css" rel="stylesheet">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-T3c6CoIi6uLrA9TneNEoa7RxnatzjcDSCmG1MXxSR1GAsXEV/Dwwykc2MPK8M2HN" crossorigin="anonymous">
    <style>
        * {
            margin: 0;
            padding: 0;
            box-sizing: border-box;
        }
        
        html,
        body {
            width: 100%;
            height: 100%;
            display: flex;
            justify-content: center;
            align-items: center;
            flex-direction: column;
            background-color: #f8f9fa;
        }
        
        .allposts {
            width: 100%;
            max-width: 1200px;
            height: 100%;
            overflow-y: auto;
            padding: 2rem;
        }
        
        .allposts::-webkit-scrollbar {
            display: none;
        }
        
        h1 {
            text-transform: capitalize;
            margin-bottom: 1rem;
        }
        
        .card {
            width: 100%;
            max-width: 29vw;
            margin: 1rem 0;
            box-shadow: 0 4px 8px rgba(0, 0, 0, 0.1);
            border-radius: 0.5rem;
        }
        
        .card img {
            width: 100%;
            height: 15vmax;
            object-fit: cover;
            border-top-left-radius: 0.5rem;
            border-top-right-radius: 0.5rem;
        }
        
        .postcreate {
            display: flex;
            align-items: center;
            margin-bottom: 1rem;
        }
        
        .postcreate p {
            margin-right: 0.5rem;
        }
        
        .addcom {
            cursor: pointer;
        }
        
        .commentadd {
            display: none;
        }
        
        @media (max-width: 768px) {
            .card {
                max-width: 100%;
            }
            .card img {
                height: 20vmax;
            }
        }
    </style>
</head>

<body>
    <h1 class="text-primary">Home page</h1>
    <div class="postcreate gap-3 my-1">
        <p class="fs-4">Create Post</p>
        <a href="/createpost" class="text-decoration-none fs-4 text-secondary">
            <i class="ri-add-circle-fill"></i>
        </a>
    </div>
    <div class="allposts flex justify-center gap-4  flex-wrap">
        <% allposts.forEach(function(post) { %>
            <div class="card">
                <img src="<%= post.image %>" class="card-img-top" alt="Post Image">
                <div class="card-body">
                    <div class="likeandcomment d-flex gap-4">
                        <div class="like d-flex align-items-center gap-1">
                            <p class="my-2 fs-5">0</p>
                            <a href="#" class="btn text-primary fs-4">Like</a>
                        </div>
                        <div class="comment d-flex align-items-center gap-1">
                            <p class="my-2 fs-5">0</p>
                            <p class="btn text-primary fs-4 my-2">Comments</p>
                        </div>
                    </div>
                    <p class="card-text my-4">
                        <%= post.caption %>
                    </p>
                    <div class="com">
                        <p id="addcom" class="addcom">Add a comment...</p>
                        <div id="newcomment" class="commentadd">
                            <form class="commentform d-flex gap-2" action="/addcomment/<%= post.id %>" method="post">
                                <input class="form-control" name="newcomment" type="text" placeholder="Your comment">
                                <input class="btn btn-primary" type="submit" value="Post">
                            </form>
                        </div>
                    </div>
                </div>
            </div>
            <% }) %>
    </div>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/js/bootstrap.bundle.min.js" integrity="sha384-C6RzsynM9kWDrMNeT87bh95OGNyZPhcTNXj1NW7RuBCsyN/o0jlpcV8Qyq46cDfL" crossorigin="anonymous"></script>
    <script>
        document.querySelectorAll(".com").forEach(function(elem) {
            elem.addEventListener("click", function(dets) {
                if (dets.target.id === "addcom") {
                    const newCommentSection = elem.querySelector("#newcomment");
                    newCommentSection.style.display = newCommentSection.style.display === "none" || !newCommentSection.style.display ? "block" : "none";
                }
            })
        })
    </script>
</body>

</html>